%li{:id => ['user_story', user_story.id], :class => 'user_stories'}
  %header
    %h4= user_story.name
    %span.story_points= user_story.points
  %div.details= highlight_user_story(user_story.description)
  %footer
    = link_to 'Delete', project_user_story_path(@project, user_story), :method => :delete, :confirm => 'Are you sure?'
    = link_to 'Edit', edit_project_user_story_path(@project, user_story), :remote => true
