=form_for([@project, @user_story], :remote => true) do |f|
  %div
    =f.label :name, 'Name'
    =f.text_field :name
  %div
    =f.label :description, 'Description'
    =f.text_area :description
  %div#status
    =f.label :status_id, 'Status'
    =f.collection_select(:status_id, @statuses, :id, :name)
  %div
    =f.submit :class => 'button'
