%tr{:id => ['project', project.id]}
  %td.project_info
    %h3= link_to project.name, project_path(project)
    %div.project_description= project.description
  %td
    %ul.project_statuses
      - project.statuses.each do |status|
        %li
          = status.name
  %td
    %ul.project_user_stories
      - project.statuses.each do |status|
        %li
          = status.user_stories.count
  %td.project_availability
    %ul.project_statuses_availability
      - project.statuses.each do |status|
        %li
          = status.availability
  %td
    %ul
      - project.users.each do |member|
        %li= member.name
  %td.project_actions
    %ul
      %li= link_to 'edit project', edit_project_path(project)
      %li= link_to 'statuses', project_statuses_path(project)
      %li= link_to 'members', project_members_path(project)
      %li= link_to 'delete project', project_path(project), :method => :delete, :confirm => 'Are you sure?'

